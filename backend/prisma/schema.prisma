generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  email    String
  password String

  Client   Client[]
  Supplier Supplier[]

  @@map("users")
}

model Supplier {
  id   String @id @default(uuid())
  cnpj String

  userId      String
  user        User          @relation(fields: [userId], references: [id])
  Negotiation Negotiation[]

  @@map("suppliers")
}

model Client {
  id  String @id @default(uuid())
  cpf String

  userId      String
  user        User          @relation(fields: [userId], references: [id])
  Negotiation Negotiation[]

  @@map("clients")
}

model Product {
  id                 String               @id @default(uuid())
  name               String
  description        String
  price              Float                @default(0)
  NegotiationProduct NegotiationProduct[]

  deletedAt DateTime? @map("deleted_at")

  @@map("products")
}

model NegotiationProduct {
  id            String      @id @default(uuid())
  productId     String      @map("product_id")
  product       Product     @relation(fields: [productId], references: [id])
  negotiationId String      @map("negotiation_id")
  negotiation   Negotiation @relation(fields: [negotiationId], references: [id])

  @@map("negotiations_products")
}

model Negotiation {
  id          String @id @default(uuid())
  discount    Float
  totalValue  Float  @map("total_value")
  description String
  status      String @default("NÃ£o iniciado")

  clientId String @map("client_id")
  client   Client @relation(fields: [clientId], references: [id])

  supplierId         String               @map("supplier_id")
  supplier           Supplier             @relation(fields: [supplierId], references: [id])
  NegotiationProduct NegotiationProduct[]
}
